<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refreshSearch"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivSearchUserSearch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:elevation="10dp"
            app:layout_constraintEnd_toEndOf="@id/etSearchUserSearch"
            app:layout_constraintTop_toTopOf="@id/etSearchUserSearch"
            app:layout_constraintBottom_toBottomOf="@+id/etSearchUserSearch"
            android:src="@drawable/ic_action_search"/>

        <EditText
            android:id="@+id/etSearchUserSearch"
            style="@style/EditTextBlackBorder"
            android:layout_width="250dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:visibility="gone"
            tools:visibility="visible"
            android:imeOptions="actionDone"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <ImageView
            android:id="@+id/iv_search_virus"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/black"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etSearchUserSearch" />

        <TextView
            android:id="@+id/tv_search_total_infected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_search_virus"
            app:layout_constraintEnd_toEndOf="@id/iv_search_virus"
            app:layout_constraintStart_toStartOf="@+id/iv_search_virus"
            app:layout_constraintTop_toTopOf="@id/iv_search_virus" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_search_info"
            style="@style/EditTextBlackBorder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="30dp"
            android:padding="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_search_virus">

            <TextView
                android:id="@+id/tv_search_has_infected"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:text="Ha infectado a %s de %s usuarios"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_search_percentage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esto implica un"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_search_has_infected" />

            <TextView
                android:id="@+id/tv_search_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/tv_search_percentage_text"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/tv_search_percentage_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_search_percentage_title"
                tools:text="11" />

            <TextView
                android:id="@+id/tv_search_percentage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_has_infected_percentage"
                app:layout_constraintBottom_toBottomOf="@+id/tv_search_percentage"
                app:layout_constraintEnd_toEndOf="@+id/tv_search_percentage_title"
                app:layout_constraintStart_toEndOf="@+id/tv_search_percentage"
                app:layout_constraintTop_toTopOf="@+id/tv_search_percentage" />

            <ImageView
                android:id="@+id/ivSearchLinkToInfect"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/greenRadioactive"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_search_percentage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>