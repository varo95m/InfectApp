<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refreshHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_home_virus"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="60dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_total_infected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_home_virus"
            app:layout_constraintEnd_toEndOf="@id/iv_home_virus"
            app:layout_constraintStart_toStartOf="@+id/iv_home_virus"
            app:layout_constraintTop_toTopOf="@id/iv_home_virus" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_home_info"
            style="@style/EditTextBlackBorder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="30dp"
            android:padding="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_home_virus">

            <TextView
                android:id="@+id/tv_home_has_infected"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:text="Has infectado a %s de %s usuarios"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_home_percentage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esto implica un"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_has_infected" />

            <TextView
                android:id="@+id/tv_home_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/tv_home_percentage_text"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/tv_home_percentage_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_percentage_title"
                tools:text="11" />

            <TextView
                android:id="@+id/tv_home_percentage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_has_infected_percentage"
                app:layout_constraintBottom_toBottomOf="@+id/tv_home_percentage"
                app:layout_constraintEnd_toEndOf="@+id/tv_home_percentage_title"
                app:layout_constraintStart_toEndOf="@+id/tv_home_percentage"
                app:layout_constraintTop_toTopOf="@+id/tv_home_percentage" />

            <TextView
                android:id="@+id/ivHomeLinkToInfect"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:background="@color/greenRadioactive"
                android:textIsSelectable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_percentage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>