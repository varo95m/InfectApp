<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_home_virus"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_home_total_infected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123.000"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@id/iv_home_virus"
        app:layout_constraintStart_toStartOf="@+id/iv_home_virus"
        app:layout_constraintEnd_toEndOf="@id/iv_home_virus"
        app:layout_constraintBottom_toBottomOf="@id/iv_home_virus"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_home_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/bg_border_gray"
        app:layout_constraintTop_toBottomOf="@+id/iv_home_virus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_home_has_infected_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Has infectado"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_home_has_infected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/home_has_infected_users"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_has_infected_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_home_percentage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esto implica un"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_has_infected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_home_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/home_has_infected_percentage"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_percentage_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>






    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>